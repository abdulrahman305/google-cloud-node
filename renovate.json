{
  "extends": [
    "config:base",
    "docker:disable"
  ],
  "constraintsFiltering": "strict",
  "pinVersions": false,
  "rebaseStalePrs": false,
  "schedule": [
    "* 9 * * 1"
  ],
  "prCreation": "not-recreate",
  "gitAuthor": null,
  "packageRules": [
    {
      "extends": "packages:linters",
      "groupName": "linters"
    },
    {
    "matchPackageNames": "*",
     "matchUpdateTypes": ["major", "patch"]
    }
  ],
  "ignoreDeps": [
    "typescript"
  ]
}
