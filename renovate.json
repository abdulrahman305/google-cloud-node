{
  "extends": [
    "config:base",
    "docker:disable"
  ],
  "constraintsFiltering": "strict",
  "pinVersions": false,
  "rebaseStalePrs": true,
  "schedule": [
    "every Monday"
  ],
  "prCreation": "not-recreate",
  "gitAuthor": null,
  "packageRules": [
    {
      "extends": "packages:linters",
      "groupName": "linters"
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "enabled": false
    }
  ],
  "ignoreDeps": [
    "typescript"
  ]
}
